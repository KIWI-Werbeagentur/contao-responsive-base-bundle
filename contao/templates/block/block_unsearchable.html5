            <div class="<?= $this->baseClass ?>__inside inside <?= implode(" ",$this->innerClass) ?>">
                <?php $this->block('content'); ?>
                <?php $this->endblock(); ?>
            </div>
        <?php else:?>
            <?php $this->block('content'); ?>
            <?php $this->endblock(); ?>
        <?php endif;?>
    <?php $this->endblock(); ?>

</div>
