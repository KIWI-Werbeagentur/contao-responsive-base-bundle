{% set raw = this.class|default(class|default('')) %}
{% set parts = raw|split('data-cff-condition="', 2) %}
{% set cffAttr = (parts|length > 1) ? parts[1]|split('"', 2)[0] : '' %}
{% set cleanClasses = parts[0]|replace({'"': ''})|trim %}

<fieldset class="fieldset formbody__area {{ cleanClasses }} {{ getAllResponsiveClasses(arrConfiguration)|join(' ') }}"{% if cffAttr %} data-cff-condition="{{ cffAttr }}"{% endif %}>
    <div class="fieldset__inside {{ getAllInnerContainerClasses(arrConfiguration)|join(' ') }}">
        {% if this.label ?? false %}
            <legend>{{ this.label|default(label|default('')) }}</legend>
        {% endif %}
