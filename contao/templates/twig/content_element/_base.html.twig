{% extends "@Contao/content_element/_base.html.twig" %}

{% set baseClass = "content-#{type|replace({'_': '-'})}" %}
{% set attributes = attrs().addClass(getAllResponsiveClasses(data)).mergeWith(attributes|default) %}

{%- block inner %}
    {% if nested_fragments %}
        <div class="{{ baseClass }}__inside inside {{ getAllInnerContainerClasses(data)|join(" ") }}">{{ parent() }}</div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock -%}

{% set content_attributes = content_attributes|default(attrs()).addClass("#{baseClass}__content") %}

{% block content %}
    <div {{ content_attributes }}>
        {{ block('content')|raw }}
    </div>
{% endblock %}