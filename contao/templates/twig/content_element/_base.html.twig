{% extends "@Contao/content_element/_base.html.twig" %}

{% set attributes = attrs().addClass(getAllResponsiveClasses(data)).mergeWith(attributes|default) %}
{% set attributes = attrs().addClass(getContainerClasses(data.responsiveContainer)).mergeWith(attributes|default) %}

{% set inner_classes = getAllInnerContainerClasses(data)|join(" ") %}

{%- block inner %}
    {% if nested_fragments %}
        <div class="content__inside inside {{ inner_classes }}">{{ parent() }}</div>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock -%}

{% block content %}
    <div {{ content_attributes }}>
        {{ block('content')|raw }}
    </div>
{% endblock %}